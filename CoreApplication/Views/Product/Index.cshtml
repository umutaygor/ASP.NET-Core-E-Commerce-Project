@using EntityLayer.Concrete
@model List<Product> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Listing For Sneakers</h3>
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                    <div class="col-lg-4 card">
                        <a href="single.html">
                            <img src="@item.ProductImage" class="card-img-top img-fluid" alt="">
                        </a>
                        <div class="card-body">
                            <ul class="blog-icons my-4">
                                <li>
                                    <a href="#">
                                        <i class="far fa-calendar-alt"></i> @(((DateTime)item.ProductCreateDate).ToString("dd-MMM-yyyy"))
                                    </a>
                                </li>
                                <li class="mx-2">
                                    <a href="#">
                                        <i class="far fa-comment"></i> 21
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="fas fa-eye"></i> @item.Category.CategoryName
                                    </a>
                                </li>

                            </ul>
                            <h5 class="card-title">
                                <a href="/Product/ProductReadAll/@item.ProductID/">@item.ProductName</a>
                            </h5>
                            <p class="card-text mb-3">@item.ProductContent.Substring(0,item.ProductContent.Substring(0,125).LastIndexOf(" "))...</p>
                            <a href="/Product/ProductReadAll/@item.ProductID/" class="btn btn-primary read-m">Read More</a>
                        </div>
                    </div>

                    }

                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>



@model IEnumerable<EntityLayer.Concrete.Comment>
<div class="comment-top">
    <h4>Comments</h4>
    @if (Model.Count() == 0) {
<p>There are no comments for this product. Be the first to leave one.</p>
    }
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="~/Theme/web/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUsername</h5>
                <p>
                    @item.CommentContent
                </p>

               
            </div>
        </div>
    }
</div>
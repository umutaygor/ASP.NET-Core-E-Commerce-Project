@using EntityLayer.Concrete
@model List<Product>
<div class="tech-btm">
    <h3>Latest Posts</h3>
    @foreach (var item in Model)
    {
    <div class="blog-grids row mb-3">
        <div class="col-md-5 blog-grid-left">
            <a href="/Product/ProductReadAll/@item.ProductID">
                <img src="~/Theme/web/images/4.jpg" class="card-img-top img-fluid" alt="">
            </a>
        </div>
        <div class="col-md-7 blog-grid-right">

            <h5>
                <a href="/Product/ProductReadAll/@item.ProductID">@item.ProductContent.Substring(0, item.ProductContent.Substring(0, 50).LastIndexOf(" "))...</a>
            </h5>
            <div class="sub-meta">
                <span>
                    <i class="far fa-clock"></i>@(((DateTime)item.ProductCreateDate).ToString("dd-MMM-yyyy"))
                </span>
            </div>
        </div>

    </div>
    }

</div>